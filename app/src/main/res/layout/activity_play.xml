<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006B3C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dealer"
            android:textAlignment="center" /><!-- Word Dealer -->

        <LinearLayout
            android:id="@+id/dealer_windo_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dealer_ci1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/card_back"
                android:paddingHorizontal="20dp"/>

            <ImageView
                android:id="@+id/dealer_ci2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/card_back"
                android:paddingHorizontal="20dp"/>

            <LinearLayout
                android:id="@+id/dt_windo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/dealer_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

            </LinearLayout><!-- dealer total 2 -->

        </LinearLayout><!-- Dealer windo 2 -->

        <LinearLayout
            android:id="@+id/button_windo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deal"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:background="@android:color/holo_red_dark"/>

            <Button
                android:id="@+id/draw_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Draw"
                android:visibility="invisible"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:background="@android:color/holo_red_dark"/>

            <Button
                android:id="@+id/hold_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Hold"
                android:visibility="invisible"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:background="@android:color/holo_red_dark"/>
        </LinearLayout> <!-- Buttons -->

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player"
            android:textAlignment="center" /><!-- Word Player -->

        <LinearLayout
            android:id="@+id/player_windo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_ci1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/card_back"
                android:paddingHorizontal="10dp"
                android:tag="pcard_1"/>

            <ImageView
                android:id="@+id/player_ci2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/card_back"
                android:paddingHorizontal="10dp"
                android:tag="pcard_2"/>

            <ImageView
                android:id="@+id/player_ci3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/card_back"
                android:paddingHorizontal="10dp"
                android:tag="pcard_3"/>

            <LinearLayout
                android:id="@+id/pt_windo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/player_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

            </LinearLayout><!-- player total 2 -->


        </LinearLayout><!-- Player windo 2-->

    </LinearLayout> <!-- Play Area -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="17dp"
        android:text="Money:" />

    <TextView
        android:id="@+id/money_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:text="$100"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/money_textview"
        android:layout_alignEnd="@+id/money_textview"
        android:layout_marginBottom="46dp"
        android:text="Bet:"
        android:textColor="#FFD700"
        android:textSize="18sp"
        android:background="@android:color/holo_red_dark"/>

    <EditText
        android:id="@+id/betAmount_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bet_button"
        android:layout_toEndOf="@+id/bet_button"
        android:ems="10"
        android:hint="Enter Bet Amount"
        android:inputType="number" />


</RelativeLayout>